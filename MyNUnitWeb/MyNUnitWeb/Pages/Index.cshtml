@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <dl>
            <dd>
                <input type="file" name="files" class="form-control" multiple/>
            </dd>
            <input asp-page-handler="Upload" class="btn btn-primary" type="submit" value="Upload!"/>
        </dl>
    </form>
</div>

<div class="align-content-center">
    <form method="post">
        <input asp-page-handler="RunTests" class="form-control-sm" type="submit" value="Run tests">
    </form>
</div>

<table class="table">
    <thead>
    <tr>
        <th scope="col">Assembly name</th>
        <th scope="col">Amount of successful tests</th>
        <th scope="col">Amount of unsuccessful tests</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var info in Model.TestInfos)
    {
        if (info.AssembliesTestInfo == null)
        {
            continue;
        }
        @foreach (var assemblyInfo in info.AssembliesTestInfo)
        {
            <tr>
                <td>@assemblyInfo.Name</td>
                <td>@assemblyInfo.GetSuccessfulTestsCount()</td>
                <td>@assemblyInfo.GetUnsuccessfulTestsCount()</td>
            </tr>
        }
    }
    </tbody>
</table>